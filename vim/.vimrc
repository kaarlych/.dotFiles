" Enable line numbers
set number

" Enable syntax highlighting
syntax enable

" Set the default file encoding to UTF-8
set encoding=utf-8

" Remap j to up arrow and k to down arrow
nnoremap j <Up>
nnoremap k <Down>

" Enable line wrapping
set wrap

" Set indentation to 4 spaces (replace tabs with spaces)
set tabstop=4
set shiftwidth=4
set expandtab

" Enable auto-indentation
filetype plugin indent on

" Highlight search results as you type
set incsearch

" Show matching parentheses and brackets
set showmatch

" Enable line break at the word boundary (soft wrapping)
set linebreak

" Highlight search results
set hlsearch

" Enable search to be case-insensitive
set ignorecase

" Enable case-sensitive search when typing uppercase letters
set smartcase

" Show line and column number in the status line
set ruler

" Enable auto-completion
set wildmenu
set wildmode=list:longest

" Enable line numbers for search
set relativenumber

" Enable auto-wrapping of comments
set formatoptions+=cro

" Show line and column number in the status bar
set ruler
